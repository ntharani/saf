<% @opusses["data"].each do |opusses| %>

<div class="container">
  
  <div class="row">
    <div ><%= safe_image_tag(opusses["author"]["avatar_url"], alt: "Avatar", class: "pull-left", size: "64x64") %></div>

    <div><%= form_for(:comment, :url => { :action => "comment" }, :html => { :method => 'post' } ) do |f| %> <%= f.hidden_field :comment_id, :value => opusses["opuss_id"] %><%= button_tag(type: 'submit', class: "btn btn-large pull-right indexfeed") do %><i class="icon-comment"></i>&nbsp;&nbsp;&nbsp; <%= opusses["numberOfComments"] %><% end %><% end %>
    </div>

    <div><%= form_for(:like, :url => { :action => "like" }, :html => { :method => 'post' } ) do |f| %> <%= f.hidden_field :like_id, :value => opusses["opuss_id"] %><%= button_tag(type: 'submit', class: "btn btn-large pull-right indexfeed") do %><i class="icon-heart"></i>&nbsp;&nbsp;&nbsp; <%= opusses["numberOfLikes"] %><% end %><% end %>
    </div>
  </div>

  <div class="row indexfeedtext">
  <br >
  <div>
        <strong><%= link_to opusses["title"], opuss_path(:id => opusses["opuss_id"]) %></strong>
  </div>

  <div>
    <%= link_to truncate(opusses["opuss"], :length => 140), opuss_path(:id => opusses["opuss_id"]) %>
  </div>

  <div>
    <i><%= distance_of_time_in_words(opusses["created"], Time.now.utc)%> ago</i>
  </div>


</div>

</div>

<hr>




  <% end %>
